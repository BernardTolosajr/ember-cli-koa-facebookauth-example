<ul>
  <li>
      {{#if session.isAuthenticated}}
        <div class="alert alert-info">
          You are currently authenticated as <em>"{{session.user.name}}"</em>
        </div>
        <a {{ action 'invalidateSession' }}>Logout</a>
      {{else}}
        {{#link-to 'login'}}Login{{/link-to}}
      {{/if}}
  </li>
  <li>{{#link-to 'protected'}}Protected{{/link-to}}</li>
</ul>

{{outlet}}


